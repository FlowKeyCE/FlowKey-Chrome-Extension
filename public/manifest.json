{
  "name": "FlowKey - Bookmark & Layout Manager",
  "version": "1.0.0",
  "description": "Powerful bookmark management and layout organization with Phantom wallet integration",
  "manifest_version": 3,
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["content.js"] }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FlowKey",
    "default_icon": {
      "16": "./assets/icons/flowkey_logo_16.png",
      "32": "./assets/icons/flowkey_logo_32.png",
      "48": "./assets/icons/flowkey_logo_48.png",
      "128": "./assets/icons/flowkey_logo_128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "./assets/icons/flowkey_logo_16.png",
    "32": "./assets/icons/flowkey_logo_32.png",
    "48": "./assets/icons/flowkey_logo_48.png",
    "64": "./assets/icons/flowkey_logo_64.png",
    "128": "./assets/icons/flowkey_logo_128.png"
  },
  "permissions": ["storage", "bookmarks", "tabs", "activeTab"]
}
